.row
  .column
    p#notice
    h4 Nations
    table.shipping-manager
      thead
        tr
          th Code
          th Name
          th
          th
      tbody
        - @nations.each do |nation|
          tr
            td = nation.code
            td = nation.name
            td = link_to "Shipping types", nation_shipping_types_path(nation)
            td = link_to 'Destroy', nation, method: :delete, data:  {confirm: 'Are you sure?' }
    br
    = link_to 'New Nation', new_nation_path
    |&nbsp;|&nbsp;
    = link_to "Sync shipping settings", sync_shipping_nations_path
